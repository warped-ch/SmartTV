<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/card_view"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/imageViewPicon"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_tv"
                android:padding="6dp" />

            <TextView
                android:id="@+id/textViewChannelTitle"
                android:text="Channel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/textViewEpgEventTitle"
                android:gravity="bottom|start"
                android:layout_toLeftOf="@+id/imageButtonZap"
                android:layout_toRightOf="@+id/imageViewPicon"
                android:layout_toEndOf="@+id/imageViewPicon"
                android:layout_toStartOf="@+id/imageButtonZap"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin" />

            <ImageButton
                android:id="@+id/imageButtonZap"
                android:text="zap"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_above="@+id/textViewEpgEventTitle"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_play_circle_filled"
                android:scaleType="fitEnd"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:tint="@color/colorCyanAccent700"
                android:layout_alignRight="@+id/textViewEpgEventTitle"
                android:layout_alignEnd="@+id/textViewEpgEventTitle"
                android:paddingTop="6dp" />

            <TextView
                android:id="@+id/textViewEpgEventTitle"
                android:text="Event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageViewPicon"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="6dp" />

            <ImageButton
                android:id="@+id/imageButtonTrailer"
                android:text="trailer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/textViewEpgEventTitle"
                android:layout_alignParentTop="false"
                android:src="@drawable/ic_movie"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textViewEpgEventStartTime"
                android:text="HH:MM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageButtonTrailer"
                android:layout_alignLeft="@+id/textViewEpgEventTitle"
                android:layout_alignStart="@+id/textViewEpgEventTitle"/>

            <TextView
                android:id="@+id/textViewEpgEventEndTime"
                android:text="HH:MM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageButtonTrailer"
                android:layout_alignRight="@+id/textViewEpgEventTitle"
                android:layout_alignEnd="@+id/textViewEpgEventTitle"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarEpgEventDuration"
                android:progressTint="@color/colorCyanAccent700"
                android:layout_alignLeft="@+id/textViewEpgEventStartTime"
                android:layout_alignStart="@+id/textViewEpgEventStartTime"
                android:layout_alignRight="@+id/textViewEpgEventEndTime"
                android:layout_alignEnd="@+id/textViewEpgEventEndTime"
                android:layout_below="@+id/textViewEpgEventStartTime" />

            <TextView
                android:id="@+id/textViewEpgEventDescription"
                android:text="EPG event description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/progressBarEpgEventDuration"
                android:layout_alignLeft="@+id/textViewEpgEventTitle"
                android:layout_alignStart="@+id/textViewEpgEventTitle"
                android:layout_alignRight="@+id/textViewEpgEventTitle"
                android:layout_alignEnd="@+id/textViewEpgEventTitle"
                android:layout_marginBottom="@dimen/text_margin" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>