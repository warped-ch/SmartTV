<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="org.dev.warped.smarttv.DeviceDiscoveryFragment"
    tools:context="org.dev.warped.smarttv.DeviceDiscoveryFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageButtonCloseDeviceDiscovery"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@android:color/transparent"
            android:layout_margin="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/device_discovery"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/imageButtonCloseDeviceDiscovery"
            android:layout_alignBottom="@+id/imageButtonCloseDeviceDiscovery"
            android:layout_alignTop="@+id/imageButtonCloseDeviceDiscovery"
            android:gravity="center" />

        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/recyclerViewDevices"
            android:layout_below="@+id/imageButtonCloseDeviceDiscovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/device_list_item"
            android:layout_marginTop="8dp" />

</RelativeLayout>